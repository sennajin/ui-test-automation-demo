{
  "name": "ui-test-automation-demo",
  "version": "1.0.0",
  "description": "> **Shopify Live Store E2E Testing Suite**  \r > Governed by principles that prioritize safety, clarity, and reliability over breadth.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:small-desktop": "playwright test --project=small-desktop",
    "test:standard-laptop": "playwright test --project=standard-laptop",
    "test:full-hd": "playwright test --project=full-hd",
    "test:large-desktop": "playwright test --project=large-desktop",
    "test:iphone-12": "playwright test --project=iphone-12-safari",
    "test:iphone-13-pro": "playwright test --project=iphone-13-pro-safari",
    "test:ipad-pro": "playwright test --project=ipad-pro-safari",
    "test:pixel-5": "playwright test --project=pixel-5-chrome",
    "test:pixel-7": "playwright test --project=pixel-7-chrome",
    "test:galaxy-s21": "playwright test --project=galaxy-s21-chrome",
    "test:mobile": "playwright test --project=iphone-12-safari --project=iphone-13-pro-safari --project=ipad-pro-safari --project=pixel-5-chrome --project=pixel-7-chrome --project=galaxy-s21-chrome",
    "test:ios": "playwright test --project=iphone-12-safari --project=iphone-13-pro-safari --project=ipad-pro-safari",
    "test:android": "playwright test --project=pixel-5-chrome --project=pixel-7-chrome --project=galaxy-s21-chrome",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "playwright test && allure generate allure-results --clean -o allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3"
  }
}
